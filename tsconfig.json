{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    /* Language and Environment */
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,    
    "outDir": "./build",
    "rootDir": "./src",         
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
